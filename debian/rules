#!/usr/bin/make -f

DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
DEB_HOST_GNU_CPU   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_CPU)

ifeq ($(DEB_BUILD_GNU_TYPE), $(DEB_HOST_GNU_TYPE))
  CONFFLAGS += --build $(DEB_HOST_GNU_TYPE)
else
  CONFFLAGS += --build $(DEB_BUILD_GNU_TYPE) --host $(DEB_HOST_GNU_TYPE)
endif

ifneq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
  CFLAGS += -g
endif
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
	CFLAGS += -D_FORTIFY_SOURCE=2 
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif
ifneq ($(DEB_HOST_GNU_CPU),arm)
	CFLAGS += -fstack-protector
endif
CFLAGS += -fPIE
LDFLAGS += -Wl,-z,relro,-z,noexecstack -pie

config.status: configure
	dh_testdir
	mv config.sub config.sub.upstream && ln -s /usr/share/misc/config.sub
	mv config.guess config.guess.upstream && ln -s /usr/share/misc/config.guess
	env LDFLAGS="$(LDFLAGS)" CFLAGS="$(CFLAGS)" ./configure --prefix=/usr --mandir=\$${prefix}/share/man --infodir=\$${prefix}/share/info --sysconfdir=/etc/pound --disable-tcmalloc --disable-hoard
	rm config.sub && mv config.sub.upstream config.sub
	rm config.guess && mv config.guess.upstream config.guess


build: build-stamp

build-stamp:  config.status
	dh_testdir
	$(MAKE) F_CONF=/etc/pound/sapphire.cfg
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp 

	[ ! -f Makefile ] || $(MAKE) clean
	rm -f config.h config.status config.log Makefile

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	$(MAKE) install DESTDIR=$(CURDIR)/debian/sapphire-pound25
	mv debian/sapphire-pound25/usr/sbin/pound debian/sapphire-pound25/usr/sbin/sapphirepound25
	mv debian/sapphire-pound25/usr/sbin/poundctl debian/sapphire-pound25/usr/sbin/sapphirepoundctl25
	mv debian/sapphire-pound25/usr/share/man/man8/pound.8 debian/sapphire-pound25/usr/share/man/man8/sapphirepound25.8
	mv debian/sapphire-pound25/usr/share/man/man8/poundctl.8 debian/sapphire-pound25/usr/share/man/man8/sapphirepoundctl25.8
	install -m644 -D debian/pound.cfg debian/sapphire-pound25/etc/pound/sapphire25.sample

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs CHANGELOG 
	dh_installdocs
	dh_installexamples
	dh_installinit
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
